<UserControl
    x:Class="BF1.ServerAdminTools.Views.ServerView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:gif="https://github.com/XamlAnimatedGif/XamlAnimatedGif"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Name="View_Server"
    d:DesignHeight="900"
    d:DesignWidth="1600"
    mc:Ignorable="d">

    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <!--  ####################  -->
            <StackPanel
                Grid.Row="0"
                HorizontalAlignment="Center"
                Orientation="Horizontal">
                <TextBox
                    Width="250"
                    Margin="5"
                    Padding="5,10,5,10"
                    InputLanguageManager.InputLanguage="en-US"
                    Text="{Binding ServerModel.ServerName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    ToolTip="After the input is completed, press the Enter key to quickly query">
                    <TextBox.InputBindings>
                        <KeyBinding Key="Enter" Command="{Binding QueryServerCommand}" />
                    </TextBox.InputBindings>
                </TextBox>
                <Button
                    Margin="0,5,0,5"
                    Command="{Binding QueryServerCommand}"
                    Content="&#xe610;"
                    Style="{StaticResource ButtonStyle_SearchIcon}" />
            </StackPanel>
            <!--  ####################  -->
            <ListBox
                Grid.Row="1"
                Margin="5,0,5,5"
                ItemContainerStyle="{StaticResource ListBoxItemStyle_ServerList}"
                ItemsSource="{Binding ServersItems}"
                Style="{StaticResource ListBoxStyle_ServerList}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border
                            BorderBrush="Gray"
                            BorderThickness="0,0,0,0.5"
                            ToolTip="{Binding description}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="40" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <TextBlock
                                    Grid.Column="0"
                                    Margin="10,0,10,0"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontSize="14"
                                    Style="{StaticResource TextBlockStyle_IconFontBase}"
                                    Text="{Binding favoriteStar}" />
                                <Image
                                    Grid.Column="1"
                                    Margin="0,2,0,2"
                                    Source="{Binding mapImageUrl, Converter={StaticResource ImageConverter}}"
                                    Style="{StaticResource ImageStyle_HQ}" />

                                <StackPanel
                                    Grid.Column="2"
                                    Margin="10"
                                    VerticalAlignment="Center">
                                    <StackPanel.Resources>
                                        <Style TargetType="{x:Type TextBlock}">
                                            <Setter Property="VerticalAlignment" Value="Center" />
                                        </Style>
                                    </StackPanel.Resources>
                                    <StackPanel DockPanel.Dock="Top">
                                        <TextBlock
                                            VerticalAlignment="Bottom"
                                            FontSize="14"
                                            FontWeight="Bold"
                                            Text="{Binding name}"
                                            TextTrimming="CharacterEllipsis"
                                            TextWrapping="NoWrap" />
                                        <TextBlock
                                            Margin="0,5,0,5"
                                            Text="{Binding description}"
                                            TextTrimming="CharacterEllipsis"
                                            TextWrapping="NoWrap" />
                                    </StackPanel>
                                    <StackPanel
                                        Margin="0,2.5,0,0"
                                        VerticalAlignment="Top"
                                        Orientation="Horizontal">
                                        <Border
                                            Width="20"
                                            Height="15"
                                            VerticalAlignment="Top"
                                            Background="White"
                                            BorderBrush="Gray"
                                            BorderThickness="0.7">
                                            <Ellipse
                                                Width="7"
                                                Height="7"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Fill="Red" />
                                        </Border>
                                        <TextBlock Margin="10,0,10,0">
                                            <TextBlock.Text>
                                                <MultiBinding StringFormat="{}{0} - {1} - 60HZ">
                                                    <Binding Path="mapModePretty" />
                                                    <Binding Path="mapNamePretty" />
                                                </MultiBinding>
                                            </TextBlock.Text>
                                        </TextBlock>
                                    </StackPanel>
                                </StackPanel>

                                <StackPanel
                                    Grid.Column="3"
                                    HorizontalAlignment="Right"
                                    Orientation="Horizontal">
                                    <TextBlock Margin="10,0,10,0" VerticalAlignment="Center">
                                        <TextBlock.Text>
                                            <MultiBinding StringFormat="{}{0}/{1} [{2}]">
                                                <Binding Path="soldierCurrent" />
                                                <Binding Path="soldierMax" />
                                                <Binding Path="queryCurrent" />
                                            </MultiBinding>
                                        </TextBlock.Text>
                                    </TextBlock>
                                    <Border
                                        Width="20"
                                        Height="15"
                                        Margin="10,0,0,0"
                                        VerticalAlignment="Center">
                                        <UniformGrid Columns="5">
                                            <Border
                                                Height="2"
                                                Margin="0.5"
                                                VerticalAlignment="Bottom"
                                                Background="#20cd67" />
                                            <Border
                                                Height="5"
                                                Margin="0.5"
                                                VerticalAlignment="Bottom"
                                                Background="#20cd67" />
                                            <Border
                                                Height="8"
                                                Margin="0.5"
                                                VerticalAlignment="Bottom"
                                                Background="#20cd67" />
                                            <Border
                                                Height="10"
                                                Margin="0.5"
                                                VerticalAlignment="Bottom"
                                                Background="#20cd67" />
                                            <Border
                                                Height="13"
                                                Margin="0.5"
                                                VerticalAlignment="Bottom"
                                                Background="#20cd67" />
                                        </UniformGrid>
                                    </Border>
                                    <TextBlock
                                        Margin="10,0,10,0"
                                        VerticalAlignment="Center"
                                        Foreground="#20cd67"
                                        Text="{Binding platform}" />
                                    <Button
                                        Margin="5,0,15,0"
                                        Command="{Binding DataContext.ServerInfoCommand, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=ListBox}}"
                                        CommandParameter="{Binding gameId}"
                                        Content="&#xe68a;"
                                        Style="{StaticResource ButtonStyle_SearchIcon}" />
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
        <!--  ####################  -->
        <Border
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Visibility="{Binding ServerModel.LoadingVisibility}">
            <Image
                Width="100"
                Height="100"
                gif:AnimationBehavior.SourceUri="/Assets/Images/Other/Loading.gif"
                Style="{StaticResource ImageStyle_HQ}" />
        </Border>
    </Grid>

</UserControl>
