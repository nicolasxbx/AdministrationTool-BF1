    <Style x:Key="ListBoxItemStyle_Noraml" TargetType="{x:Type ListBoxItem}">
        <Setter Property="Padding" Value="8" />
    </Style>

    <Style x:Key="ListBoxStyle_Map" TargetType="{x:Type ListBox}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ListBox}">
                    <ScrollViewer Style="{StaticResource ScrollViewerStyle_VAHD}">
                        <WrapPanel IsItemsHost="true" />
                    </ScrollViewer>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="ItemContainerStyle">
            <Setter.Value>
                <Style TargetType="{x:Type ListBoxItem}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListBoxItem">
                                <Grid
                                    Width="300"
                                    Height="160"
                                    Margin="5"
                                    Background="#4C4A48">
                                    <Border Name="border" BorderThickness="0" />
                                    <ContentPresenter />
                                </Grid>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#409EFF" />
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="Orange" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Setter.Value>
        </Setter>
        <Setter Property="ItemTemplate">
            <Setter.Value>
                <DataTemplate>
                    <DockPanel Background="Transparent" LastChildFill="True">
                        <UniformGrid
                            Name="uniformGrid"
                            Height="90"
                            DockPanel.Dock="Bottom"
                            Rows="2">
                            <TextBlock
                                Margin="20,0,0,5"
                                VerticalAlignment="Bottom"
                                Foreground="White"
                                Text="{Binding modePrettyName}" />
                            <TextBlock
                                Margin="20,5,0,5"
                                VerticalAlignment="Top"
                                Foreground="White"
                                Text="{Binding mapPrettyName}" />
                        </UniformGrid>
                        <Image
                            VerticalAlignment="Center"
                            DockPanel.Dock="Top"
                            RenderOptions.BitmapScalingMode="HighQuality"
                            Source="{Binding mapImage, Converter={StaticResource ImageConverter}}"
                            Stretch="UniformToFill" />
                    </DockPanel>
                    <DataTemplate.Triggers>
                        <EventTrigger RoutedEvent="DockPanel.MouseEnter">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation
                                        Storyboard.TargetName="uniformGrid"
                                        Storyboard.TargetProperty="Height"
                                        From="90"
                                        To="130"
                                        Duration="0:0:.1" />
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                        <EventTrigger RoutedEvent="DockPanel.MouseLeave">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation
                                        Storyboard.TargetName="uniformGrid"
                                        Storyboard.TargetProperty="Height"
                                        From="130"
                                        To="90"
                                        Duration="0:0:.1" />
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </DataTemplate.Triggers>
                </DataTemplate>
            </Setter.Value>
        </Setter>
    </Style>

